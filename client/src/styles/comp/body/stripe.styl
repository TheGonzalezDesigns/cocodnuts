#payment-form
	.control
		text-align center
		justify-content center
		align-items stretch
		align-content stretch
		min-width 75vw
		.StripeElement
			background-color: rgba(white, 0.92)
			min-height: 40px
			padding: 10px 12px
			border-radius: 4px
			border: 1px solid transparent
			box-shadow: 0 1px 3px 0 #e6ebf1
			transition: box-shadow 150ms ease
			width 100%

		.StripeElement--focus
			box-shadow: 0 1px 3px 0 #cfd7df

		.StripeElement--invali
			border-color: #fa755a

		.StripeElement--webkit-autofil
			background-color: rgba(#fefde5, 0.92) !important
		.button
			width 100%
			opacity 0.92
			font-family Roboto Slab
			font-weight bold
			background-image url(pattern)
			&:after
				content ' !'
