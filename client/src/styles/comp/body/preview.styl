@import "var.styl"
@import "reusables.styl"
//genH(1, 2)
#preview
	highlight()
	@extend .flex-seconds
	display flex
	align-content center
	align-items center
	justify-content center
	flex-direction column
	.item
		max-width 75%
		max-height 100%
		@extend .backgroundSpecial
		position relative
		@extend .border-radius
		flex-direction column
		transform rotate(.5deg)
		opacity 0.9
		.photo
			width auto
			margin 0
			padding 0
			margin-bottom -0.5vmin
			padding 0n
			img
				width auto
				height 100%
				border-top-left-radius inherit
				margin 0
				padding 0
				max-height 40vmin
				//@media all and (orientation: portrait)
				//@media all and (orientation: landscape)
		.content
			//padding 0.5vmin 2vmin
			font-family sans-serif
			text-align center
			.name
				@extend .h4
				@extend .Merienda-Red
				text-transform capitalize
				@extend .text
			.price
				@extend .h5
				@extend .Merienda-Green
				@extend .text
				&:before
					content "$"
			.description
				@extend .h2
				font-family inherit
				white-space pre-wrap
				@extend .Merienda-Red
				overflow-y auto
				max-height 15vmin
				padding 0 2vmin
				background transparent
				@extend .text
			.category
				@extend .h5
				text-transform uppercase
				letter-spacing 0.25vmin
				@extend .Merienda-Yellow
				@extend .text
				&:after
				&:before
					content "âˆ¸"
					opacity 0.9
					font-weight bold
			.direction
				@extend .h5
				@extend .Merienda-Green
				@extend .text

@media all and (orientation: portrait)
	#all
		#preview
			.item
				border-radius 10px
				@extend .center
				.content
					position absolute
					gradient(rgba(darken(p.a, 60%), 0.2))
					border-radius 10px
					padding 2.5vmin
					@extend .center-self
					opacity 0.95
					clip-path polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%)
					transform scale(1.45)
			.item
			.photo
			img
				border-radius 10px

@media all and (orientation: landscape)
	#all
		#preview
			.item
				border-radius 10px
				.content
					background none
					box-shadow none
				.photo, image
						border-radius 10px 0 10px 0
