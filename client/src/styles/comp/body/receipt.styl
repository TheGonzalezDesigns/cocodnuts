@import 'var.styl'
genH(0.75, 3.25)
#receipt
  background-position 0 0
  box-shadow #0003 2px 2px 53px
  min-height 30vh
  position relative
  width 75%
  min-width 45vw
  perspective-origin 144px 179.5px
  transform-origin 144px 179.5px
  background rgb(255, 255, 255) url('../graphics/paper.png') repeat scroll 0 0 / auto padding-box border-box
  outline rgb(102, 102, 102) none 0
  margin auto
  margin-top 5.5rem
  padding 1.5rem
  opacity 0.95
  transform rotate(1deg)
  @extend .transition
  @media all and (orientation: landscape)
    transform translateY(10%)
    margin-bottom: 5rem;
  &:after
    background-position 0 0
    bottom -7px
    color rgb(102, 102, 102)
    height 0.5rem
    left 0
    position absolute
    width 100%
    perspective-origin 144px 5px
    transform-origin 144px 5px
    content ' '
    background rgba(0, 0, 0, 0) url('../graphics/zigzag.png') repeat-x scroll 0 0 / auto padding-box border-box
    outline rgb(102, 102, 102) none 0
  ul
    color rgb(102, 102, 102)
    min-height inherit
    width 100%
    perspective-origin 144px 19px
    transform-origin 144px 19px
    border 0 none rgb(102, 102, 102)
    font normal normal normal 13px/17px Helvetica, Arial, sans-serif
    outline rgb(102, 102, 102) none 0
    padding 0.5rem 0.25rem
    &:after
      background-position 0 0
      color rgb(102, 102, 102)
      min-height 28px
      height 100%
      position absolute
      right -27px
      top 2px
      width 57px
      perspective-origin 28.5px 14px
      transform-origin 28.5px 14px
      content ' '
      background rgba(0, 0, 0, 0) url('../graphics/paperclip.png') no-repeat scroll 0 0 / auto padding-box border-box
      outline rgb(102, 102, 102) none 0
    li
      //font normal normal light 14px/17px Helvetica, Arial, sans-serif
      font-family Roboto Slab
      @extend .h2
      @extend .text
      text-transform uppercase
      margin 0.5rem
      display flex
      justify-content space-around
      align-items space-around
      align-content space-around
      flex-direction column
      .name
        font-weight thin
        align-self flex-start
        margin 0.5rem 0
      .total
        font-weight lighter
        align-self flex-end
        margin 0.5rem 0
      &:last-of-type
      &.seperate
        border-top dashed 0.075rem #333
        padding-top 1.5rem
        margin-top @padding-top
        flex-direction row
        .total
          font-weight bold
        .name
        .total
          margin 0.25rem
  form
    width 100%
    .button
    input
      width 100%
      opacity 0.9
    .button
    #card-errors
      margin-top 2.5vh

.StripeElement {
  background-color: white
  height: 40px
  padding: 10px 12px
  border-radius: 4px
  border: 1px solid transparent
  box-shadow: 0 1px 3px 0 #e6ebf1 inset
  transition: box-shadow 150ms ease
}

.StripeElement--focus {
  box-shadow: 0 1px 3px 0 #cfd7df;
}

.StripeElement--invalid {
  border-color: #fa755a;
}

.StripeElement--webkit-autofill {
  background-color: #fefde5 !important;
}
