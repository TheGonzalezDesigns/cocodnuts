#checkout
	highlight()
	align-self center
	.help
		@extend .caveat
		&:first-of-type
			font-size responsive 1rem 3rem
		&:last-of-type
			font-size responsive 1rem 5rem
			span
				@extend .caveat-green
	input
		background: rgba(white, 0.92)
		font-family Roboto Slab
		text-transform capitalize
		@extend .h3
	label
		font-family Pompiere
		letter-spacing 0.065rem
		margin-top 0.5em
		@extend .h2
		shade()
		color: darken(p.d, 0.7)
	.left
		display flex
		flex-direction column
		.control:last-of-type
			flex-grow 1
			align-self stretch
			justify-content center
			align-content center
			align-items center
			display flex
			button
				@extend .h2
